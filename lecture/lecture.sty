\newcommand{\newlecture}[2]{
  \renewcommand{\partname}{Lecture}
  \lecture{#2}{Lecture #1}
  \part{#2}
  \setcounter{part}{#1}
  \ifbool{wholelecture}{
    \begin{frame}
      \partpage\label{lecture-#1}
    \end{frame}
  }{
    \begin{frame}[label=title-page]
      \subtitle{Lecture \lectureroman{#1}: #2}
      \titlepage
    \end{frame}
  }
}

\newcommand{\newlectureappendix}[2]{
